@model IEnumerable<Nhom8_Web.Models.SanPham>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- ========================= Main ==================== -->
<div class="main">
    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>

        <div class="search">
            <label>
                <input type="text" placeholder="Search here">
                <ion-icon name="search-outline"></ion-icon>
            </label>
        </div>

        <div class="user">
            <img src="assets/imgs/nhim.jpg" alt="">
        </div>
    </div>

    <!-- ================ Danh sách sản phẩm ================= -->
    <div class="detailsFix">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>Danh sách sản phẩm</h2>
                <a href="#" class="btn">Xem tất cả</a>

            </div>
            <p>
                <a href="@Url.Action("Create")" class="custom-button">Thêm sản phẩm mới</a>
            </p>
            <table>
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Tên sản phẩm</td>
                        <td>Loại sản phẩm</td>
                        <td>Số lượng</td>
                        <td>Giá tiền</td>
                        <td>Giảm giá</td>
                        <td>Giá bán</td>
                        <td>Trạng thái</td>
                        <td>Hình ảnh</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiSanPhamObj.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSanPham)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaTien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiamGia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaBan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>

                                @if (item.HinhAnh != null)
                                {
                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.HinhAnh)"
                                         style="width: 200px;" />
                                }
                                else
                                {
                                    <!-- Hiển thị hình ảnh rỗng hoặc thông báo khác khi HinhAnh là null -->
                                    <span>No Image</span>
                                }
                            </td>
                            <td> @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new { @class = "custom-link" }) </td>
                            <td>@Html.ActionLink("Chi tiết", "Details", new { id = item.ID }, new { @class = "custom-link" })</td>
                            <td>@Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "custom-link" }) </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>


    </div>
</div>

