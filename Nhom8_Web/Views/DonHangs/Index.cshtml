@model IEnumerable<Nhom8_Web.Models.DonHang>

@{
    ViewBag.Title = "Index";
}


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ========================= Main ==================== -->

<div class="main">
    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>

        <div class="search">
            <label>
                <input type="text" placeholder="Search here">
                <ion-icon name="search-outline"></ion-icon>
            </label>
        </div>

        <div class="user">
            <img src="~/Content/assets/imgs/nhim.jpg" alt="">
        </div>
    </div>

    <!-- ================ Danh sách đơn hàng================= -->
    <div class="detailsFix">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>Danh sách đơn hàng</h2>
                <a href="#" class="btn">Xem tất cả</a>
            </div>
            <p>
                <a href="@Url.Action("Create")" class="custom-button">Thêm đơn hàng mới</a>
            </p>

            <table>
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Tên khách hàng</td>
                        <td>Trạng thái</td>
                        <td>Thanh toán</td>
                        <td>Tổng tiền</td>
                        <td>Ngày lập đơn hàng</td>
                        <td></td>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KhachHangObj.HoVaTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThaiThanhToan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TongTien)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayLap)
                            </td>
                            <td>@Html.ActionLink("Details", "Details", new { id = item.ID })</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>