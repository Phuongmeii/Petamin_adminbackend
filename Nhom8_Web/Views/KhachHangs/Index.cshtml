@model IEnumerable<Nhom8_Web.Models.KhachHang>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- ========================= Main ==================== -->
<div class="main">
    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>

        <div class="search">
            <label>
                <input type="text" placeholder="Search here">
                <ion-icon name="search-outline"></ion-icon>
            </label>
        </div>

        <div class="user">
            <img src="~/Content/assets/imgs/nhim.jpg" alt="">
        </div>
    </div>

    <!-- ================ Khách hàng ================= -->
    <div class="details">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>Danh sách khách hàng</h2>
                <a href="#" class="btn">Xem tất cả</a>
            </div>
            <p>
                <a href="@Url.Action("Create")" class="custom-button">Thêm khách hàng mới</a>
            </p>
            <table>
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Họ và tên</td>
                        <td>Email</td>
                        <td>Địa chỉ</td>
                        <td>Số điện thoại</td>
                        <td>Hình ảnh</td>
                        <td></td>
                        <td></td>
                        <td></td>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.HoVaTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @if (item.HinhAnh != null)
                                {
                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.HinhAnh)"
                                         style="width: 200px;" />
                                }
                                else
                                {
                                    <!-- Hiển thị hình ảnh rỗng hoặc thông báo khác khi HinhAnh là null -->
                                    <span>No Image</span>
                                }
                            </td>
                            <td> @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "custom-link" }) </td>
                            <td>@Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "custom-link" })</td>
                            <td>@Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "custom-link" }) </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- ================= New Customers ================ -->
        <div class="recentCustomers">
            <div class="cardHeader">
                <h2>Khách hàng gần đây</h2>
            </div>

            <table>
                <tr>
                    <td width="60px">
                        <div class="imgBx"><img src="~/Content/assets/imgs/nhim.jpg" alt=""></div>
                    </td>
                    <td>
                        <h4>Mai Phương <br> <span>Việt Nam</span></h4>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>