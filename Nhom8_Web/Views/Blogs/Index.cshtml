@model IEnumerable<Nhom8_Web.Models.Blog>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- ========================= Main ==================== -->
<div class="main">
    <div class="topbar">
        <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
        </div>

        <div class="search">
            <label>
                <input type="text" placeholder="Search here">
                <ion-icon name="search-outline"></ion-icon>
            </label>
        </div>

        <div class="user">
            <img src="~/Content/assets/imgs/nhim.jpg" alt="">
        </div>
    </div>

    <!-- ================ Danh sách dịch vụ================= -->
    <div class="detailsFix">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>Danh sách blog</h2>
                <a href="#" class="btn">Xem tất cả</a>
            </div>
            <p>
                <a href="@Url.Action("Create")" class="custom-button">Thêm Blog mới</a>
            </p>
            <table>
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Tên bài đăng</td>
                        <td>Nội dung</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenBlog)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoiDung)
                            </td>
                            <td> @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "custom-link" }) </td>
                            <td>@Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "custom-link" })</td>
                            <td>@Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "custom-link" }) </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
</div>